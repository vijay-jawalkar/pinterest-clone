<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-7 py-3 text-white">
<h3 class="text-xl"> Create a new post </h3>
<hr class="opacity-20 mt-2 "/>

<form action="/createpost" method="post" enctype="multipart/form-data" class="flex flex-col justify-center gap-4 w-full lg:w-1/4 mt-6 ">
<input type = "file" name = "postimage" class="text-white rounded-md" />
<input type = "text" placeholder="Title" name = "title" class="rounded-md px-2 text-black"/>
<textarea type = "text" placeholder="Description" name = "description" class="rounded-md px-2 text-black h-40" > </textarea>
<input type = "submit"class = "text-white bg-blue-700 w-fit text-sm rounded-lg px-5 py-2 font-semibold" value="Create Post"/>
</form>
</div>

