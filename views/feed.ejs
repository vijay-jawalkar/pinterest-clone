<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 py-8 px-10">

    <!-- multiple cards -->
<div class="flex justify-center lg:justify-start flex-wrap gap-8 ">

    <% posts.forEach((element) => { %>
      <!-- single card -->
    <div class="text-white w-40">
        <div class="w-full h-28 bg-sky-400 rounded-lg overflow-hidden"> 
      <img src = "/images/uploads/<%= element.postImage %>" alt = "" class="w-full h-full object-cover" />
        </div>

        <h4 class="mt-2 text-sm"> <%= element.title %> </h4>
    </div>
     <% }) %>
   

</div>
</div>
<% include ./partials/footer.ejs %>